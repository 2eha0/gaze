---
import { getAllPages } from '../utils/gaze'
import { AIActions } from './AIActions'
import type { Page } from '../types/gaze'

interface Props {
  currentPage?: Page
}

const { currentPage } = Astro.props

const pages = getAllPages()
const currentPath = Astro.url.pathname

// Get base URL from Astro config (e.g., '/gaze' in production, '/' in development)
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, '') || ''

// Helper to build URLs with base path
function buildUrl(path: string): string {
  if (path === '/') return baseUrl || '/'
  return `${baseUrl}/${path}`.replace(/\/+/g, '/')
}

// Normalize current path for comparison (remove base and trailing slashes)
const pathWithoutBase = currentPath.replace(new RegExp(`^${baseUrl}`), '') || '/'
const normalizedCurrentPath = pathWithoutBase === '/' ? '/' : pathWithoutBase.replace(/\/$/, '')

// Determine page info for AI actions
const pageTitle = currentPage?.name || 'Home'
const pageSlug = currentPage?.slug || 'home'
---

<nav class="gaze-navigation sticky top-0 z-50 glass border-b border-white/10">
  <div class="max-w-480 mx-auto px-4">
    <div class="flex items-center gap-6 h-12">
      {/* Logo/Brand */}
      <div class="shrink-0">
        <a href={buildUrl('/')} class="text-sm font-bold text-white/80 hover:text-white transition-colors">
          G
        </a>
      </div>

      {/* Navigation Links - Minimal style matching widget headers */}
      <div class="flex items-center gap-1 flex-1">
        {pages.map((page) => {
          const href = buildUrl(page.isHomepage ? '/' : page.slug);
          const comparePath = page.isHomepage ? '/' : `/${page.slug}`;
          const isActive = normalizedCurrentPath === comparePath ||
                          (normalizedCurrentPath === '/' && page.isHomepage);

          return (
            <a
              href={href}
              class={`nav-link px-2.5 py-1 text-xs font-semibold uppercase tracking-wider transition-colors ${
                isActive
                  ? 'text-white'
                  : 'text-white/50 hover:text-white/80'
              }`}
              aria-current={isActive ? 'page' : undefined}
            >
              {page.name}
            </a>
          );
        })}
      </div>

      {/* AI Actions */}
      <div class="shrink-0">
        <AIActions client:load pageTitle={pageTitle} pageSlug={pageSlug} />
      </div>
    </div>
  </div>
</nav>

<style>
  .gaze-navigation {
    backdrop-filter: blur(10px);
    background: rgba(0, 0, 0, 0.5);
  }
</style>
