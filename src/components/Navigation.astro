---
import { getAllPages } from '../utils/gaze'

const pages = getAllPages()
const currentPath = Astro.url.pathname

// Get base URL from Astro config (e.g., '/gaze' in production, '/' in development)
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, '') || ''

// Helper to build URLs with base path
function buildUrl(path: string): string {
  if (path === '/') return baseUrl || '/'
  return `${baseUrl}/${path}`.replace(/\/+/g, '/')
}

// Normalize current path for comparison (remove base and trailing slashes)
const pathWithoutBase = currentPath.replace(new RegExp(`^${baseUrl}`), '') || '/'
const normalizedCurrentPath = pathWithoutBase === '/' ? '/' : pathWithoutBase.replace(/\/$/, '')
---

<nav class="gaze-navigation sticky top-0 z-50 glass border-b border-white/10">
  <div class="max-w-480 mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      {/* Logo/Brand */}
      <div class="shrink-0">
        <a href={buildUrl('/')} class="text-xl font-bold text-white hover:text-white/80 transition-colors">
          Gaze
        </a>
      </div>

      {/* Navigation Links */}
      <div class="flex items-center gap-2">
        {pages.map((page) => {
          const href = buildUrl(page.isHomepage ? '/' : page.slug);
          const comparePath = page.isHomepage ? '/' : `/${page.slug}`;
          const isActive = normalizedCurrentPath === comparePath ||
                          (normalizedCurrentPath === '/' && page.isHomepage);

          return (
            <a
              href={href}
              class={`nav-link px-4 py-2 rounded-md text-sm font-medium transition-all ${
                isActive
                  ? 'bg-white/20 text-white'
                  : 'text-white/70 hover:text-white hover:bg-white/10'
              }`}
              aria-current={isActive ? 'page' : undefined}
            >
              {page.name}
            </a>
          );
        })}
      </div>
    </div>
  </div>
</nav>

<style>
  .gaze-navigation {
    backdrop-filter: blur(10px);
    background: rgba(0, 0, 0, 0.5);
  }

  .nav-link {
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: currentColor;
    transform: translateX(-50%);
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 80%;
  }
</style>
